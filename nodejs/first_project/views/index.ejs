<% include partials/header %>
	I passed the word : <%= title %> from the server to these extended javascript files...

	<h2> Add Customer : </h2>
	<% if(errors) { %>
		<h4>There was an error with the form submission.</h4>
		<ul>
		<% errors.forEach(function(error){ %>
			<li><%= error.msg %> </li> 
		<%		}) %>
		</ul>	
	<% } %>
	<form method="POST" action="/users/add">
		<label>First Name</label><br>
		<input type="text" name="first_name">
		<br>
		<label>Last Name</label><br>
		<input type="text" name="last_name">
		<br>
		<label>Email</label><br>
		<input type="text" name="email">
		<br>
		<br>
		<input type="submit" value="submit">
	</form>

	<h4>List of Users</h4>
	<ul>
	<% users.forEach(function(user){ %>
		<li>	First Name : <%= user.first_name %>, 
			Last Name : <%= user.last_name %>, 
			Email : <%=user.email %>
			ID : <%=user.id %>
			<a href='#' class='deleteUser' data-id="<%=user.id%>">Delete</a>
		</li>
	<%	}) %>
	</ul>

<% include partials/footer %>
